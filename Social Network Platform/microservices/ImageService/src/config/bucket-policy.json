{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:ListAllMyBuckets",
        "s3:ListBucket",
        "s3:GetObject",
        "s3:PutObject"
      ],
      "Resource": [
        "arn:aws:s3:::user-profiles",
        "arn:aws:s3:::user-profiles/*",
        "arn:aws:s3:::post-images",
        "arn:aws:s3:::post-images/*",
        "arn:aws:s3:::comment-attachments",
        "arn:aws:s3:::comment-attachments/*"
      ]
    }
  ]
}